{
  "name": "citewalk-system-root",
  "private": true,
  "description": "Root package for husky + lint-staged only. Each app (apps/api, apps/web) has its own package.json and deps.",
  "scripts": {
    "deploy:dev": "./scripts/deploy.sh local",
    "deploy:watch": "node scripts/watch-and-deploy.js"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.3.0"
  },
  "lint-staged": {
    "apps/api/src/**/*.{ts,tsx}": [
      "node scripts/lint-staged-eslint.js",
      "npx prettier --write"
    ],
    "apps/api/test/**/*.{ts,tsx}": [
      "node scripts/lint-staged-eslint.js",
      "npx prettier --write"
    ],
    "apps/web/**/*.{ts,tsx}": [
      "node scripts/lint-staged-eslint.js",
      "npx prettier --write"
    ],
    "apps/mobile/**/*.{ts,tsx}": [
      "node scripts/lint-staged-mobile-typecheck.js",
      "npx prettier --write"
    ]
  }
}